<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold"><%= t('modals.basic.title') %></h3>
    <%= render Bali::Tag::Component.new(text: t('modals.basic.new'), color: :primary) %>
  </div>

  <p><%= t('modals.basic.body') %></p>
  <p class="text-base-content/70"><%= t('modals.basic.body_detail') %></p>

  <div class="modal-action">
    <%= render Bali::Button::Component.new(name: t('modals.basic.close'), variant: :ghost, data: { action: 'modal#close' }) %>
    <%= render Bali::Button::Component.new(name: t('modals.basic.got_it'), variant: :primary, data: { action: 'modal#close' }) %>
  </div>
</div>
