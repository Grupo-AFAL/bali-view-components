<%# Breadcrumb %>
<%= render Bali::Breadcrumb::Component.new do |breadcrumb| %>
  <% breadcrumb.with_item(name: 'Dashboard', href: root_path, icon_name: 'home') %>
  <% breadcrumb.with_item(name: 'Movies', href: movies_path) %>
  <% breadcrumb.with_item(name: @movie.name, href: movie_path(@movie)) %>
  <% breadcrumb.with_item(name: 'Edit') %>
<% end %>

<%# Page Header %>
<%= render Bali::PageHeader::Component.new(class: 'mt-4 mb-6') do |header| %>
  <% header.with_title do %>
    Edit: <%= @movie.name %>
  <% end %>
  <% header.with_subtitle('Update movie information') %>
<% end %>

<%= render 'form', movie: @movie %>
