<div class="flex items-center justify-center gap-2 my-2">
  <div class="flex-1 border-t border-base-300"></div>
  <input type="hidden" name="q[m]" value="<%= combinator %>" data-advanced-filters-target="groupCombinator">
  <div class="join" data-advanced-filters-target="groupCombinatorToggle">
    <button type="button"
            class="join-item btn btn-xs w-10 <%= combinator == 'and' ? 'btn-primary' : 'btn-outline' %>"
            data-action="advanced-filters#setGroupCombinator"
            data-combinator="and">
      <%= t('bali.advanced_filters.combinators.and', default: 'AND') %>
    </button>
    <button type="button"
            class="join-item btn btn-xs w-10 <%= combinator == 'or' ? 'btn-primary' : 'btn-outline' %>"
            data-action="advanced-filters#setGroupCombinator"
            data-combinator="or">
      <%= t('bali.advanced_filters.combinators.or', default: 'OR') %>
    </button>
  </div>
  <div class="flex-1 border-t border-base-300"></div>
</div>
