<%= render Bali::HoverCard::Component.new(**options) do |c| %>
  <% c.with_trigger(class: 'actions-dropdown-trigger is-flex') do %>
    <%= render Bali::Icon::Component.new('ellipsis-h') %>
  <% end %>

  <% if (authorized_items = items.select(&:authorized?)).any? %>
    <% authorized_items.each_with_index do |item, index| %>
      <%= item %>
      <%= tag.div(class: 'dropdown-divider') if index < authorized_items.size - 1 %>
    <% end %>
  <% else %>
    <%= content %>
  <% end %>
<% end %>
