<%= tag.div class: container_classes, **@options.except(:class) do %>
  <%= tag.div class: [inner_classes, (placeholder_classes if placeholder?)].compact do %>
    <% if placeholder? %>
      <%= placeholder %>
    <% elsif picture? %>
      <%= picture %>
    <% elsif @src.present? %>
      <%= image_tag @src, class: 'w-full h-full object-cover' %>
    <% end %>
  <% end %>
<% end %>
