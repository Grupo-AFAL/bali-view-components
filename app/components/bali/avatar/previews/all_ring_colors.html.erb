<div class="flex items-center gap-6 flex-wrap">
  <% %i[primary secondary accent neutral success warning error info].each do |color| %>
    <div class="flex flex-col items-center gap-2">
      <%= render(Bali::Avatar::Component.new(
        placeholder_url: 'avatar.png',
        size: :lg,
        shape: :circle,
        ring: color
      )) %>
      <span class="text-sm text-base-content/70"><%= color %></span>
    </div>
  <% end %>
</div>
