<%= form_with(url: '/') do |f| %>
  <%= render(Bali::Image::Component.new) do |c| %>
    <% c.with_input(form: f, method: :avatar) %>
    <% c.with_clear_button do %>
      <%= render Bali::Link::Component.new(icon_name: :trash,
          href: nil, data: { action: 'image-field#clear' }, class: 'button clear-image-button') %>
    <% end %>
  <% end %>
<% end %>