<div class="calendar-component">
  <div class="card bg-base-100 shadow <%= period == :month ? 'month-view' : 'week-view' %>">
    <div class="card-body">
      <%= header %>
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr>
              <% date_range.slice(0, all_week ? 7 : 5).each do |day| %>
                <th class="text-center text-base-content/70 font-normal text-lg">
                  <%= t('date.day_names')[day.wday] %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% date_range.each_slice(7) do |week| %>
              <%= content_tag :tr, class: tr_classes_for(week) do %>
                <% filter_week(week).each do |day| %>
                  <%= content_tag :td, class: td_classes_for(day) do %>
                    <% if show_date %>
                      <% if period == :month %>
                        <div class="font-semibold float-right text-lg">
                          <%= day.day %>
                        </div>
                      <% else %>
                        <h3 class="text-2xl font-bold <%= @options[:weekly_title_class] %>"><%= day.day %></h3>
                      <% end %>
                    <% end %>
                    <% if template.present? %>
                      <%= render template, events: sorted_events[day], period: period, day: day %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= footer %>
    </div>
  </div>
</div>
