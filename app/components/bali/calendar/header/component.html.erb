<div class="header mb-4 flex items-center justify-between">
  <div class="flex-none">
    <% if route_path.present? %>
      <%= link_to render(Bali::Icon::Component.new('arrow-left')), route(extra_params(:prev)), class: 'btn btn-ghost', title: 'previous' %>
    <% end %>
  </div>
  <div class="flex items-center gap-3">
    <h3 class="text-2xl font-bold">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </h3>
    <% if period_switch && route_path.present? %>
      <%= link_to t('view_components.bali.calendar.header.week'), route(extra_params(:week)), class: class_names('btn btn-primary', 'btn-outline': period == :month) %>
      <%= link_to t('view_components.bali.calendar.header.month'), route(extra_params(:month)), class: class_names('btn btn-primary', 'btn-outline': period == :week) %>
    <% end %>
  </div>
  <div class="flex-none">
    <% if route_path.present? %>
      <%= link_to render(Bali::Icon::Component.new('arrow-right')), route(extra_params(:next)), class: 'btn btn-ghost', title: 'next' %>
    <% end %>
  </div>
</div>
