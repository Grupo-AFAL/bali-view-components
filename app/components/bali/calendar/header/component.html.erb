<div class="header mb-4">
  <%= render(Bali::Columns::Component.new(class: 'gap-0 items-center')) do |c| %>
    <%= c.with_column(class: 'flex-none') do %>
      <% if route_path.present? %>
        <%= link_to render(Bali::Icon::Component.new('arrow-left')), route(extra_params(:prev)), class: 'btn btn-ghost', title: 'previous' %>
      <% end %>
    <% end %>
    <%= c.with_column(class: 'text-center') do %>
      <h3 class="text-2xl font-bold inline">
        <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
      </h3>
      <% if period_switch && route_path.present? %>
        <%= link_to t('view_components.bali.calendar.header.week'), route(extra_params(:week)), class: class_names('btn btn-primary ml-3', 'btn-outline': period == :month) %>
        <%= link_to t('view_components.bali.calendar.header.month'), route(extra_params(:month)), class: class_names('btn btn-primary ml-3', 'btn-outline': period == :week) %>
      <% end %>
    <% end %>
    <%= c.with_column(class: 'flex-none') do %>
      <% if route_path.present? %>
        <%= link_to render(Bali::Icon::Component.new('arrow-right')), route(extra_params(:next)), class: 'btn btn-ghost', title: 'next' %>
      <% end %>
    <% end %>
  <% end %>
</div>
