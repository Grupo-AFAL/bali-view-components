<div class="calendar-component">
  <div class="day-view">
    <%= render(Bali::Columns::Component.new(class: 'gap-0')) do |c| %>
      <%= c.with_column(class: 'flex-none') do %>
        <%= link_to render(Bali::Icon::Component.new('chevron-left')), url_for(prev_day), title: 'previous' %>
      <% end %>
      <%= c.with_column(class: 'text-center') do %>
        <span class="text-lg text-base-content/70 font-normal">
          <%= l(start_date, format: :long_with_day) %>
        </span>
      <% end %>
      <%= c.with_column(class: 'flex-none') do %>
        <%= link_to render(Bali::Icon::Component.new('chevron-right')), url_for(next_day), title: 'next' %>
      <% end %>
    <% end %>
    <div class="divider"></div>
    <%= render template, events: sorted_events[start_date], period: :day, day: start_date %>
  </div>
</div>
