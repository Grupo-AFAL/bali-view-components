<%= tag.div(**component_attributes) do %>
  <% items.each do |item| %>
    <%= item %>
  <% end %>

  <%= content %>

  <% if actions.any? %>
    <div class="<%= floating_bar_classes %>" data-bulk-actions-target="actionsContainer">
      <div class="<%= floating_bar_inner_classes %>">
        <div class="<%= counter_classes %>" data-bulk-actions-target="selectedCount">0</div>
        <div class="<%= actions_wrapper_classes %>">
          <% actions.each do |action| %>
            <%= action %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
