<%= tag.div(**component_attributes) do %>
  <% items.each do |item| %>
    <%= item %>
  <% end %>

  <%= content %>

  <% if actions.any? %>
    <%= tag.div class: CLASSES[:floating_bar], data: { bulk_actions_target: 'actionsContainer' } do %>
      <%= tag.div class: CLASSES[:floating_bar_inner] do %>
        <%= tag.div '0', class: CLASSES[:counter], data: { bulk_actions_target: 'selectedCount' } %>
        <%= tag.div class: CLASSES[:actions_wrapper] do %>
          <% actions.each do |action| %>
            <%= action %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
