<div class="flex flex-col gap-8">
  <% styles = [nil, :soft, :outline, :dash] %>
  <% types = %i[success info warning error] %>

  <% styles.each do |style| %>
    <div>
      <h3 class="text-lg font-semibold mb-3"><%= style ? style.to_s.capitalize : 'Default' %> Style</h3>
      <div class="flex flex-col gap-3">
        <% types.each do |type| %>
          <%= render Bali::Notification::Component.new(type: type, style: style, fixed: false, dismiss: false) do %>
            This is a <%= type %> notification<%= style ? " with #{style} style" : '' %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
