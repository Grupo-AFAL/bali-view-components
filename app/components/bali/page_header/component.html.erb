<% right_content = content %>
<%= render Bali::Level::Component.new(align: level_align, class: component_classes, **options.except(:class)) do |c| %>
  <%= c.with_left do |level| %>
    <% if render_back_button? %>
      <% level.with_item do %>
        <%= render Bali::Link::Component.new(icon_name: 'arrow-left', **back_button_options) %>
      <% end %>
    <% end %>
    <% level.with_item do %>
      <div>
        <%= title || tag.h3(@title, class: title_classes) %>
        <%= subtitle || tag.h5(@subtitle, class: subtitle_classes) %>
      </div>
    <% end %>
  <% end %>
  <% if right_content.present? %>
    <% c.with_right do %>
      <%= right_content %>
    <% end %>
  <% end %>
<% end %>
