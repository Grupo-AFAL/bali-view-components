<%= tag.li(**item_options) do %>
  <div>
    <% if title? %>
      <%= title %>
    <% end %>
    <% if subtitle? %>
      <%= subtitle %>
    <% end %>
  </div>
  <% if content.present? %>
    <div class="<%= CONTENT_CLASSES %>">
      <%= content %>
    </div>
  <% end %>
  <% if actions? %>
    <div class="<%= ACTIONS_CLASSES %>">
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  <% end %>
<% end %>
