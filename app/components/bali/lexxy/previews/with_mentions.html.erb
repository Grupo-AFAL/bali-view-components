<div class="max-w-2xl mx-auto p-4">
  <%= render Bali::Lexxy::Component.new(
        name: 'post[body]',
        placeholder: 'Type @ to mention someone, # to add a tag...'
      ) do |editor|
    editor.with_prompt(
      trigger: '@',
      name: 'mention',
      src: '/lookbook',
      remote_filtering: true,
      empty_results: 'No users found'
    )

    editor.with_prompt(
      trigger: '#',
      name: 'tag',
      src: '/lookbook',
      supports_space_in_searches: true,
      empty_results: 'No tags found'
    )
  end %>
</div>
