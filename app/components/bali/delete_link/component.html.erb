<% if @disabled %>
  <%= render Bali::HoverCard::Component.new(hover_url: @disabled_hover_url) do |c| %>
    <% c.with_trigger do %>
      <%= tag.a(name, disabled: true, class: 'btn btn-ghost btn-disabled text-error', **options.except(:class)) %>
    <% end %>
  <% end %>
<% else %>
  <%= button_to href, method: :delete,
                      form: {
                        data: { 'turbo-confirm': confirm }
                      },
                      form_class: @form_class,
                      **options do %>
    <%= render Bali::Icon::Component.new('trash', class: 'w-4 h-4') if icon %>
    <span><%= name %></span>
  <% end %>
<% end %>
