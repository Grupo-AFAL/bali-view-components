<%= tag.div **container_options do %>
  <%= image_tag(src, **image_options) %>

  <% if input? %>
    <%= image_tag(placeholder_url, **placeholder_options) %>

    <%= input %>

    <% if clear_button? %>
      <%= clear_button %>
    <% else %>
      <%= render Bali::Button::Component.new(
            icon_name: :x,
            type: :button,
            class: clear_button_classes,
            data: { action: 'image-field#clear' },
            aria: { label: t('.clear_image') }
          ) %>
    <% end %>
  <% end %>
<% end %>
