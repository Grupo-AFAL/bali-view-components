<div id="<%= id %>"class='data-table-component'>
  <% if filters_panel.present? %>
    <%= render Bali::Level::Component.new do |c| %>
      <%= c.with_left(class: filters_class) do%>
        <%= filters_panel %>
      <% end %>
      <%= c.with_right(class: 'is-hidden-mobile') do %>
        <%= actions_panel %>
      <% end %>
    <% end %>
  <% end %>

  <% if summary.present? %>
    <%= summary %>
  <% end %>

  <div class='is-hidden-tablet is-flex is-align-items-center is-justify-content-flex-end mb-3'>
    <%= actions_panel %>
  </div>

  <% if @display_mode&.to_sym == :grid %>
    <%= grid %>
  <% else %>
    <%= tag.div class: table_wrapper_classes do %>
      <%= table %>
    <% end %>
  <% end %>

  <% if @pagy %>
    <% if custom_pagy_nav.present? %>
      <%= custom_pagy_nav %>
    <% else %>
      <div id="pagy-bulma-nav">
        <%== pagy_bulma_nav(@pagy) %>
      </div>
    <% end %>
  <% end %>
</div>
