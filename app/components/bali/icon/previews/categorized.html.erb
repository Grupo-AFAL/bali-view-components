<div class="space-y-4">
  <div class="prose">
    <h3><%= title %></h3>
    <p class="text-sm text-base-content/70"><%= description %></p>
    <p class="text-xs text-base-content/50"><%= icons.size %> icons</p>
  </div>

  <div class="grid grid-cols-6 gap-4">
    <% icons.each do |icon| %>
      <div class="text-center p-2 rounded-lg hover:bg-base-200 transition-colors">
        <div class="flex items-center justify-center h-10">
          <%= render Bali::Icon::Component.new(icon) %>
        </div>
        <p class="text-xs mt-1 truncate" title="<%= icon %>"><%= icon %></p>
      </div>
    <% end %>
  </div>
</div>
