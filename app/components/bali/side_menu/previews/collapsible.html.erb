<div class="h-[700px] bg-base-200 p-4 flex gap-4 ml-64">
  <%= render Bali::SideMenu::Component.new(current_path: '/dashboard', fixed: true, collapsable: true) do |c|
    c.with_list(title: 'Navigation') do |list|
      list.with_item(name: 'Dashboard', href: '/dashboard', icon: 'layout-dashboard')
      list.with_item(name: 'Projects', href: '/projects', icon: 'folder-open')
      list.with_item(name: 'Team', href: '/team', icon: 'users')
      list.with_item(name: 'Calendar', href: '/calendar', icon: 'calendar')
      list.with_item(name: 'Reports', href: '/reports', icon: 'file-text')
    end

    c.with_list(title: 'Settings') do |list|
      list.with_item(name: 'Account', href: '/account', icon: 'user')
      list.with_item(name: 'Preferences', href: '/preferences', icon: 'settings')
      list.with_item(name: 'Help', href: '/help', icon: 'help-circle')
    end
  end %>
  <div class="flex-1 p-4">
    <p class="text-base-content/60">A simple inline sidebar with navigation items.</p>
    <p class="text-base-content/60 mt-2">For collapsable sidebars, use <code class="text-primary">fixed: true, collapsable: true</code> in a full-page layout.</p>
  </div>
</div>
