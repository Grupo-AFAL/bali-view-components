<%= tag.div **@options, role: "tablist", 'aria-label': "Slide navigation" do %>
  <% count.times do |index| %>
    <%= tag.button(
        class: "glide__bullet",
        role: "tab",
        'aria-label': "Go to slide #{index + 1}",
        'aria-selected': index.zero?,
        data: { 'glide-dir': "=#{index}" },
        type: 'button') %>
  <% end %>
<% end %>