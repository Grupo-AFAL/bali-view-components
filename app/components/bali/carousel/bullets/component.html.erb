<%= tag.div class: component_classes, data: component_data, role: "tablist", 'aria-label': t(".navigation"), **html_options do %>
  <% count.times do |index| %>
    <%= tag.button(
        class: "glide__bullet",
        role: "tab",
        'aria-label': t(".go_to_slide", number: index + 1),
        'aria-selected': index.zero?,
        data: { 'glide-dir': "=#{index}" },
        type: 'button') %>
  <% end %>
<% end %>
