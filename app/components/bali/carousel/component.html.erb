<%= tag.div **@options do %>
  <div data-glide-el="track" class="glide__track">
    <ul class="glide__slides">
      <% items.each do |item| %>
        <li class="glide__slide">
          <%= item %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= bullets if bullets? %>
  <%= arrows if arrows? %>
<% end %>